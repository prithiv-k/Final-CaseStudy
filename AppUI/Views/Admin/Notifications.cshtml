@model List<AppUI.Models.Notification>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Notifications</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Notifications</h2>

        @if (Model != null && Model.Count > 0)
        {
            <ul class="list-group">
                @foreach (var note in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@note.SentDate.ToString("dd MMM yyyy HH:mm"):</strong>
                            @note.Message
                        </div>
                        <span class="badge @(note.IsRead ? "bg-success" : "bg-warning text-dark")">
                            @(note.IsRead ? "Read" : "Unread")
                        </span>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="alert alert-info">No notifications available.</div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>