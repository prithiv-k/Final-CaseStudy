@model List<AppUI.Models.PayrollConfig>
@{
    ViewData["Title"] = "Payroll Configurations";
}
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-cash-stack me-2"></i>Payroll Configurations</h3>
            <a href="/Admin/CreatePayrollConfig" class="btn btn-light text-primary">
                <i class="bi bi-plus-circle me-1"></i>Add Payroll Config
            </a>
        </div>

        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Employee ID</th>
                            <th scope="col">Allowances</th>
                            <th scope="col">Deductions</th>
                            <th scope="col">Tax Rate (%)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var config in Model)
                        {
                            <tr>
                                <td>@config.EmployeeId</td>
                                <td>₹ @config.Allowances</td>
                                <td>₹ @config.Deductions</td>
                                <td>@config.TaxRate %</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    No payroll configurations found.
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
