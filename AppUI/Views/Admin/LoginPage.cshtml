@model AppUI.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - Payroll System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap + Google Font -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #1f1f1f, #2c3e50);
            height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background-color: #2e2e2e;
            border-radius: 16px;
            padding: 40px 30px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.6);
            animation: fadeIn 0.9s ease;
        }

            .login-card h3 {
                color: #f1c40f;
                font-weight: 600;
                text-align: center;
            }

        .form-label {
            font-weight: 500;
            color: #ccc;
        }

        .form-control,
        .form-select {
            border-radius: 10px;
            border: 1px solid #444;
            background-color: #3a3a3a;
            color: #fff;
        }

            .form-control:focus,
            .form-select:focus {
                box-shadow: 0 0 0 0.2rem rgba(241, 196, 15, 0.25);
                border-color: #f1c40f;
            }

        .btn-primary {
            background-color: #f1c40f;
            border-color: #f1c40f;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #d4ac0d;
                border-color: #d4ac0d;
            }

        .alert {
            font-weight: 500;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="text-center mb-4">
            <i class="bi bi-lock-fill" style="font-size: 3rem; color: #f1c40f;"></i>
            <h3 class="mt-2">Admin Login</h3>
            <p class="text-secondary" style="font-size: 14px;">Secure Payroll Admin Login</p>
        </div>

        <form asp-route="ValidateUser" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-select">
                    <option value="Admin">Admin</option>
                    <option value="Manager">Manager</option>
                    <option value="Employee">Employee</option>
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Login</button>
            </div>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-4 text-center">@ViewBag.Error</div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
