@model AppUI.Models.PayrollConfig
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Create Payroll Configuration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #1f1f1f, #2c3e50);
            font-family: 'Poppins', sans-serif;
            color: #fff;
            min-height: 100vh;
            padding-top: 50px;
        }

        .card {
            background-color: #2c2c2c;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
        }

        .card-header {
            background-color: #0d6efd;
            border-bottom: none;
            padding: 1.2rem 1.5rem;
        }

            .card-header h3 {
                margin: 0;
                color: #fff;
                font-weight: 600;
            }

        label {
            font-weight: 500;
            color: #f1f1f1;
        }

        .form-control, .form-select {
            background-color: #3c3c3c;
            color: #fff;
            border: 1px solid #555;
            border-radius: 10px;
        }

            .form-control:focus, .form-select:focus {
                border-color: #0d6efd;
                background-color: #444;
                color: #fff;
            }

        .text-danger {
            font-size: 0.875rem;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
            border-radius: 10px;
            font-weight: 600;
        }

        .btn-outline-secondary {
            border-radius: 10px;
            font-weight: 600;
            border-color: #ccc;
            color: #ccc;
        }

            .btn-outline-secondary:hover {
                background-color: #444;
                color: #fff;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>Create Payroll Configuration</h3>
            </div>

            <div class="card-body">
                <form asp-action="CreatePayrollConfig" asp-controller="Admin" method="post">
                    <div class="mb-3">
                        <label asp-for="EmployeeId" class="form-label">Employee</label>
                        <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeList">
                            <option value="">-- Select Employee --</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Allowances" class="form-label">Allowances (₹)</label>
                        <input asp-for="Allowances" class="form-control" placeholder="Enter allowances" />
                        <span asp-validation-for="Allowances" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Deductions" class="form-label">Deductions (₹)</label>
                        <input asp-for="Deductions" class="form-control" placeholder="Enter deductions" />
                        <span asp-validation-for="Deductions" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TaxRate" class="form-label">Tax Rate (%)</label>
                        <input asp-for="TaxRate" class="form-control" placeholder="Enter tax rate" />
                        <span asp-validation-for="TaxRate" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-check-circle me-1"></i>Save
                        </button>
                        <a asp-action="Dashboard" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
