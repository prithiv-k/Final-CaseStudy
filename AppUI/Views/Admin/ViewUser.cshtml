@model AppUI.Models.Employee
@{
    ViewData["Title"] = "View Employee";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Payroll Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap + Poppins -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #1f1f1f, #2c3e50);
            font-family: 'Poppins', sans-serif;
            color: #fff;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            background-color: #2c2c2c;
            border-radius: 16px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            color: #fff;
            padding: 30px;
            width: 100%;
            max-width: 550px;
        }

        h2.title {
            color: #f1c40f;
            font-weight: 600;
            text-align: center;
            margin-bottom: 30px;
        }

        .card-body p {
            font-size: 1.1rem;
            margin-bottom: 12px;
            border-bottom: 1px solid #444;
            padding-bottom: 8px;
        }

        .btn-back {
            background-color: #0d6efd;
            border: none;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

            .btn-back:hover {
                background-color: #0b5ed7;
            }
    </style>
</head>
<body>

    <div class="card">
        <h2 class="title">Employee Details</h2>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Department:</strong> @Model.Department</p>
            <p><strong>Role:</strong> @Model.Role</p>

            <div class="text-end mt-4">
                <a href="/Admin/Dashboard" class="btn btn-back">
                    ← Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
