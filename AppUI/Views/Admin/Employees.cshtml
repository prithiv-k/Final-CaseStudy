@model List<AppUI.Models.Employee>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Employee Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #1f1f1f, #2c3e50);
            font-family: 'Poppins', sans-serif;
            color: #fff;
            min-height: 100vh;
            padding: 30px;
        }

        .container {
            background-color: #2c2c2c;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
        }

        h2 {
            color: #f1c40f;
            font-weight: 600;
            margin-bottom: 25px;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
            border-radius: 8px;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        table {
            background-color: #3c3c3c;
            color: #fff;
        }

        thead {
            background-color: #1f1f1f;
        }

        th, td {
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background-color: #444;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Employee Management</h2>

        <div class="mb-4 text-end">
            <a asp-action="CreateEmployee" asp-controller="Admin" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Add Employee
            </a>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.Name</td>
                            <td>@emp.Email</td>
                            <td>@emp.Department</td>
                            <td>@emp.Role</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-warning">No employees found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
</body>
</html>
